<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="id.shobrun.stikieventorganizer.ui.user.login.LoginViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="@{vm.loading ? View.VISIBLE : View.GONE}"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_logo"
                android:layout_marginTop="@dimen/activity_vertical_margin_xbig"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="@dimen/activity_vertical_margin_big"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/imgLogo"
                android:id="@+id/container_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/seo_hint_username"
                style="@style/Widget.SEO.TextInputLayout"
                app:errorEnabled="true"
                android:enabled="@{!vm.loading}">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={vm.username}"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="@dimen/activity_vertical_margin_xsmall"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/container_username"
                android:id="@+id/container_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/seo_hint_password"
                style="@style/Widget.SEO.TextInputLayout"
                app:errorEnabled="true"
                android:enabled="@{!vm.loading}"
                app:endIconMode="password_toggle">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:text="@={vm.password}"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_below="@+id/container_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_vertical_margin_big"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="@{!vm.loading}"
                    android:text="@string/seo_sign_in"
                    android:onClick="@{(v)-> vm.clickLogin()}"
                    />
            </LinearLayout>
        </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_signup"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="@{!vm.loading}"
            android:onClick="@{()-> vm.clickRegister()}"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="@string/seo_sign_up"
            />
    </RelativeLayout>
</layout>